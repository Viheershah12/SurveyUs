@section Scripts
{
    <script src="~/js/site.js"></script>

    <script>
        $(document).ready(function () {
            $("#storesTable").dataTable({
                searching: false
            });
            loadData();
        });

        function loadData() {
            $('#viewAll').load('/store/store/LoadAll?campaignId=@Model.CampaignId');
        };
    </script>
}