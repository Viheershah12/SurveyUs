@model SurveyUs.Web.Areas.Store.Models.ScoreboardStoreViewModel

<style>
    .storeButton {
        padding-right: 10px;
    }
</style>

<div class="row">
    @if (User.IsInRole("Guinness Judge") && !User.IsInRole("Heineken Judge") && !User.IsInRole("Admin") && !User.IsInRole("SuperAdmin") && !User.IsInRole("Bartender"))
    {
        <h3 class="mb-3 ml-2">@localizer["Stores"]</h3>
    }
    else if (User.IsInRole("Heineken Judge") && !User.IsInRole("Guinness Judge"))
    {
        <h3 class="mb-3 ml-2">@localizer["Stores"]</h3>
    }
    else
    {
        <h3 class="mb-3 ml-2">@localizer["Stores"] - @Model.CampaignName</h3>
    }
</div>

<div class="row">
    <div class="btn-group btn-breadcrumb">
        <a href="~/campaign/campaign/index" class="btn btn-default" disable><i class="fa fa-home pr-2"></i>Campaigns</a>
        <a href="~/store/store/index?campaignId=@Model.CampaignId" class="btn btn-default">Stores</a>
    </div>
</div>

