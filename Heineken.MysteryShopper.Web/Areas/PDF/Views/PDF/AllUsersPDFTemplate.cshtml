
@model List<SurveyUs.Web.Areas.PDF.Models.PDFModel>

<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Star Academy Scores</title>
	<style>
		body {
			font-family: 'Open Sans', sans-serif;
			color: #333;
			background-color: #f9f9f9;
			padding: 20px;
			line-height: 1.5;
		}

		h1 {
			font-size: 36px;
			margin-bottom: 30px;
			color: #e07a5f;
			text-align: center;
		}

		table {
			border-collapse: collapse;
			width: 100%;
			margin-top: 30px;
		}

		th, td {
			padding: 10px;
			text-align: left;
			border-bottom: 1px solid #ddd;
		}

		th {
			background-color: #007F2D;
			color: #fff;
			font-weight: normal;
			text-transform: uppercase;
		}

		tr:hover {
			background-color: #f5f5f5;
		}

		.storeTitle {
			background-color: black;
			color: white;
			font-weight: bold;
			font-size: 18px;
		}

		.header {
			position: fixed;
			top: 0;
			left: 0;
			right: 0;
			background-color: #fff;
			padding: 10px;
			box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
			z-index: 100;
		}

		.footer {
			position: fixed;
			bottom: 0;
			left: 0;
			right: 0;
			background-color: #fff;
			padding: 10px;
			box-shadow: 0px -2px 2px rgba(0, 0, 0, 0.1);
			font-size: 12px;
			color: #999;
			text-align: center;
			z-index: 100;
		}
	</style>
</head>
<body>
	<div class="header">
		<h2>Star Academy All Users</h2>
		<p>Date: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
	</div>

	<h1>Star Academy All Users</h1>

	<table>
		<thead>
			<tr>
				<th>Name</th>
				<th>Outlet</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var storeGroup in Model.GroupBy(item => item.State))
			{
				<tr>
					<td class="storeTitle" colspan="2">@storeGroup.Key</td>
				</tr>

				@foreach (var item in storeGroup)
				{
					<tr>
						<td>@item.Name</td>
						<td>@item.Outlet</td>
					</tr>
				}
			}
		</tbody>
	</table>

</body>
</html>
