
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SurveyUs.Web.Areas.Admin.Models.StoreViewModel
<form id="create-form" method="post" asp-area="Admin" asp-controller="StoreSetting" asp-action="OnPostEdit" asp-route-storeId=@Model.Id onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data" class="needs-validation" novalidate>
    @Html.HiddenFor(x => x.IsActive)
    @Html.HiddenFor(x => x.IsDeleted)
    <div class="modal-body">
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Store Name</label>
        <div class="col-md-9">
            <input type="text" asp-for="Name" name="Name" required="required" class="form-control">
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
    </div>    
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address Line 1</label>
        <div class="col-md-9">
            <input type="text" asp-for="Line1" name="Line1" required="required" class="form-control datepicker" />
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address Line 2</label>
        <div class="col-md-9">
            <input type="text" asp-for="Line2" name="Line2" class="form-control datepicker" />
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">State</label>
        <div class="col-md-9">
            @Html.DropDownListFor(model => model.State, Model.StateDropdown, "Select a state", new { required="required", @class = "form-control custom-select" })
            <div class="invalid-feedback">Please fill out this field.</div>
        </div>
    </div>
    </div>

