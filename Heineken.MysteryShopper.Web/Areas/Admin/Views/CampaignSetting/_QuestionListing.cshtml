@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<SurveyUs.Web.Areas.Admin.Models.QuestionSelectViewModel> 

<div class="form-group row">
    <label class="col-md-3 col-form-label">Select Questions</label>
    <div class="col-md-9">
        <table id="questionDataTable" class="table table-striped">
            <thead>
            <tr>
                <th>Question Text</th>
                <th>Checkbox</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td>@question.QuestionText</td>
                    <td><input type="checkbox" name="QuestionIds" class="questionCheckbox" value="@question.QuestionId" /></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>


