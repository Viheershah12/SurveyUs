@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SurveyUs.Web.Areas.Admin.Models.QuestionCategoryViewModel

<form id="create-form" method="post" asp-area="Admin" asp-controller="QuestionSetting" asp-action="OnPostCreateOrEditQuestionCategory" onsubmit="return jQueryModalPost(this);" class="needs-validation" novalidate>
    <div class="modal-body">
        <div class="form-group row">
            <label class="col-md-3 col-form-label">Name</label>
            <div class="col-md-9">
                @Html.HiddenFor(m => m.Id)
                @Html.TextBoxFor(m => m.CategoryName, new { @class="form-control", required="required" })
                @* <input type="text" asp-for="CategoryName" name="CategoryName" class="form-control" required="required"> *@
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
        </div>
    </div>
   
    <div class="modal-footer" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Save</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
    </div>
</form>

@* <script src="~/js/site.js"></script> *@

<script>
    $.validator.unobtrusive.parse(document);
</script>