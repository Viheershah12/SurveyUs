@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SurveyUs.Domain.Enums
@model IEnumerable<SurveyUs.Web.Areas.Admin.Models.QuestionViewModel>

<table class="table table-striped" id="questionTable">
