                                    {
                                        <i class="fas fa-user-check"></i> @localizer["Activate Campaign"]
                                    }
                                </a>
                            </form> *@
                        </div>
                    </div>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#questionTable").DataTable({
            searching: true
        });

    });
</script>