@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SurveyUs.Web.Areas.Admin.Models.RoleViewModel
<form id="create-form" method="post" asp-area="Admin" asp-controller="Role" asp-route-id="@Model.Id" asp-action="OnPostCreate" onsubmit="return jQueryModalPost(this);" class="needs-validation" novalidate>
    <div class ="modal-body">
        <div class="form-group row">
            <label class="col-md-3 col-form-label">@localizer["Name"]</label>
            <div class="col-md-9">
                <input type="text" asp-for="Name" name="Name" required="required" class="form-control">
                <div class="invalid-feedback">Please fill out this field.</div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
            <button type="submit" class="btn btn-success">Save</button>
            <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</form>
<script type="text/javascript" language=javascript>
    $.validator.unobtrusive.parse(document);
</script>