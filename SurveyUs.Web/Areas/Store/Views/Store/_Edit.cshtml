
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SurveyUs.Web.Areas.Admin.Models.StoreViewModel
<form id="create-form" method="post" asp-area="Store" asp-controller="Store" asp-action="OnPostEdit" asp-route-storeId="@TempData.Peek("REGION_ID")" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.IsActive)
    @Html.HiddenFor(x => x.IsDeleted)
    
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Store Name</label>
        <div class="col-md-9">
            <input type="text" asp-for="Name" name="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>    
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address Line 1</label>
        <div class="col-md-9">
            <input type="text" asp-for="Line1" name="Line1" class="form-control datepicker" />
            <span asp-validation-for="Line1" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">Address Line 2</label>
        <div class="col-md-9">
            <input type="text" asp-for="Line2" name="Line2" class="form-control datepicker" />
            <span asp-validation-for="Line2" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-md-3 col-form-label">State</label>
        <div class="col-md-9">
            @Html.DropDownListFor(model => model.State, Model.StateDropdown, "Select a state", new { @class = "form-control custom-select" })
            <span asp-validation-for="State" class="text-danger"></span>
        </div>
    </div>
